<h1>Listing identities</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Service</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @identities.each do |identity| %>
      <tr>
        <td><%= identity.uid %></td>
        <td><%= link_to identity.service.name, identity.service %></td>
        <td><%= link_to identity.user.username, identity.user %></td>
        <td><%= link_to 'Show', identity %></td>
        <td><%= link_to 'Edit', edit_identity_path(identity) %></td>
        <td><%= link_to 'Destroy', identity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

